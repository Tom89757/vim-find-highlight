{
  "name": "vim-find-highlight",
  "displayName": "vim-find-highlight",
  "publisher": "AmrMetwally",
  "icon": "./icon.jpg",
  "repository": {
    "url": "https://github.com/magdyamr542/vim-find-highlight"
  },
  "description": "highlighting the chars to reach words with vim find command",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.refreshConfigFromSettings"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "vimFindHighlight",
      "properties": {
        "vimFindHighlight.charPrimaryColor": {
          "type": "string",
          "default": "red",
          "description": "The color of the char that can be reached with the f motion within one jump"
        },
        "vimFindHighlight.charSecondaryColor": {
          "type": "string",
          "default": "green",
          "description": "The color of the char that can be reached with the f motion with more than one jump"
        },
        "vimFindHighlight.charFontWeight": {
          "type": "string",
          "default": "400",
          "description": "The font weight of the char that can be reached with the f motion",
          "enum": [
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ]
        }
      }
    },
    "commands": [
      {
        "title": "Refresh the char colors by reading settings.json",
        "command": "extension.refreshConfigFromSettings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.17",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
